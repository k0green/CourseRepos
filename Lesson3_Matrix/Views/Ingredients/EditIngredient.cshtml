@model Coffee.Entities.Ingredient
@{
    ViewBag.Title = "Edit ingredient";
}
<a asp-action="AdminFirstPage" asp-controller="Home">move to main page</a>
<form asp-action="EditIngredient" asp-controller="Ingredients" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount</label>
        <input type="number" asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
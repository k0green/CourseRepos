@model Coffee.Entities.Drink
@{
    ViewBag.Title = "Edit drink";
}
<a asp-action="AdminFirstPage" asp-controller="Home">move to main page</a>
<form asp-action="EditDrink" asp-controller="Drink" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Volume" class="control-label">Volume</label>
        <input type="number" asp-for="Volume" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Coast" class="control-label">Coast</label>
        <input type="number" step="0,01" asp-for="Coast" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
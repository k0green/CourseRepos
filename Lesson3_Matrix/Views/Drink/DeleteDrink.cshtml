@model Coffee.Entities.Drink
@{
    ViewBag.Title = "Delete drink";
}
<a asp-action="AdminFirstPage" asp-controller="Home">move to main page</a>
<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Volume</dt>
        <dd>
            @Html.DisplayFor(model => model.Volume)
        </dd>

        <dt>Preparing time</dt>
        <dd>
            @Html.DisplayFor(model => model.PreparingTime)
        </dd>

        <dt>Coast</dt>
        <dd>
            @Html.DisplayFor(model => model.Coast)
        </dd>
    </dl>

    <div>
        <form asp-controller="Drink" asp-action="DeleteDrink" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>
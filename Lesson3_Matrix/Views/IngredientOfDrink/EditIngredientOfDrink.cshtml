@model Coffee.Entities.Drinksingredient
@{
    ViewBag.Title = "Edit composition";
}
<a asp-action="AdminFirstPage" asp-controller="Home">move to main page</a>
<form asp-action="EditIngredientOfDrink" asp-controller="IngredientOfDrink" asp-route-id="@Model.DrinkId" asp-route-id="@Model.IngredientsId">
    <div class="form-group">
        <label asp-for="IngredientsId" class="control-label">Ingredients id</label>
        <input type="text" asp-for="IngredientsId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DrinkId" class="control-label">Drink id</label>
        <input type="number" asp-for="DrinkId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AmountInOneDrink" class="control-label">Amount</label>
        <input type="number" asp-for="AmountInOneDrink" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
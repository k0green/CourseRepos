@model Coffee.Entities.DrinksingredientItemModel
@{
    ViewBag.Title = "Add Ingredient into drink";
}
<a asp-action="AdminFirstPage" asp-controller="Home">move to main page</a>
<form asp-action="CreateIngredientOfDrink" asp-controller="IngredientOfDrink">
    <div class="form-group">
        <label asp-for="DrinkId" class="control-label">Volume</label>
        <input type="number" asp-for="DrinkId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IngredientsId" class="control-label">Coast</label>
        <input type="number" asp-for="IngredientsId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AmountInOneDrink" class="control-label">Amount</label>
        <input type="number" asp-for="AmountInOneDrink" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>
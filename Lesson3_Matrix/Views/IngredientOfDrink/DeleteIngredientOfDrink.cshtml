@model Coffee.Entities.Drinksingredient
@{
    ViewBag.Title = "Delete ingredient from drink";
}
<a asp-action="AdminFirstPage" asp-controller="Home">move to main page</a>
<div>
    <dl class="dl-horizontal">
        <dt>Drink Id</dt>
        <dd>
            @Html.DisplayFor(model => model.DrinkId)
        </dd>

        <dt> Id Ingredient</dt>
        <dd>
            @Html.DisplayFor(model => model.IngredientsId)
        </dd>
        <dt> Amount</dt>
        <dd>
            @Html.DisplayFor(model => model.AmountInOneDrink)
        </dd>

    </dl>

    <div>
        <form method="post" action="~/IngredientOfDrink/DeleteIngredientOfDrink?@ViewData["IngredientAndDrinkId"]">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>